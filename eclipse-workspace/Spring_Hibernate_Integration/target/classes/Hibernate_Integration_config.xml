<?xml version="1.0" encoding="UTF-8"?>
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">  
  
 <bean id="ds" class="org.apache.commons.dbcp.BasicDataSource">
 	<property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
 	<property name="url" value="jdbc:mysql://localhost:3306/springHibernate"/>
 	<property name="username" value="root"/>
 	<property name="password" value="Root"/>
 </bean> 
 <bean id="as" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
    <property name="dataSource" ref="ds"/>
 	<property name="annotatedClasses">
 		<list>
 			<value>com.joc.Book</value>
 			<value>com.joc.Theatre</value>
 		</list>
 	</property>
 <property name="hibernateProperties">
 	<props>
 		<prop key="hibernate.dialect" >org.hibernate.dialect.MySQLDialect</prop>
 		<prop key="hibernate.show_sql">true</prop>
 		<prop key="hibernate.hbm2ddl.auto">update</prop>
 	</props>
 </property>
 </bean>  
 
 <bean id="hello" class="org.springframework.orm.hibernate3.HibernateTemplate">
 	<property name="sessionFactory" ref="as"/>
 </bean> 
 
 <bean id="bd" class="com.joc.BookDao">
 	<property name="template" ref="hello"/>
 </bean>
 
 <bean id="t" class="com.joc.TheatreDao">
   <property name="sf" ref="as"></property>
 </bean>
    
 </beans>        